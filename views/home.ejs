<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Management</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Add your CSS file here -->
</head>
<body>
    <header>
        <h1>Customer Management</h1>
        <form action="/search" method="GET">
            <label for="searchQuery">Search Customers:</label>
            <input type="text" id="searchQuery" name="searchQuery" placeholder="Enter name, email, etc." />
            <button type="submit">Search</button>
        </form>        
    </header>
    <main>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% customers.forEach(customer => { %>
                    <tr>
                        <td><%= customer.name %></td>
                        <td><%= customer.email %></td>
                        <td><%= customer.contact %></td>
                        <td>
                            <a href="/customer/<%= customer.id %>">View Details</a>
                            <a href="/delete/<%= customer.id %>" class="delete">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <button onclick="location.href='/add-customer'">Add New Customer</button>
    </main>
</body>
</html>
